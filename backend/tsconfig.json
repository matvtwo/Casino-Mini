{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "outDir": "dist",
    "rootDir": "src",
    "allowJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "strict": false,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.js"],
  "exclude": ["dist", "node_modules", "db"]
}
